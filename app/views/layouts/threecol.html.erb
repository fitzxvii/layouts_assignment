<!DOCTYPE html>
<html>
    <head>
        <title><%= yield :title  %></title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

        </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <%= yield :left_column %>
                </div>
                <div class="col-md-4">
                    <%= yield :middle_column %>
                </div>
                <div class="col-md-4">
                    <%= yield :right_column %>
                </div>
            </div>
        </div>
    </body>
</html>